{
  "apps": [
    {
      "name": "blog_backed",
      "script": "./src/main.js",
      "instances": 4,
      "exec_mode": "cluster",
      "watch": true,
      "max_memory_restart": "200M",
      "error_file": "./logs/err.log",
      "out_file": "./logs/out.log",
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "env": { "NODE_ENV": "development", "PORT": 3001 },
      "env_production": { "NODE_ENV": "production", "PORT": 3001 }
    }
  ]
}
